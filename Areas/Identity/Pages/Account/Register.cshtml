@page
@model RegisterModel
@{
    ViewData["Title"] = "Зарегистрироваться";
}


<div class="row">

    <div class="col-md-4 offset-md-4">


        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">

                <label asp-for="Input.Email">Электронная почта</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-warning"></span>
            </div>

            <div class="form-group">

                <label asp-for="Input.Password">Пароль</label>
                <input asp-for="Input.Password" type="password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-warning"></span>
            </div>

            <div class="form-group">

                <label asp-for="Input.ConfirmPassword">Подтвердите пароль</label>
                <input asp-for="Input.ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-warning"></span>
            </div>


            <div class="form-group">

                <input type="submit" value="Зарегистрироваться" class="btn btn-success" />
            </div>


        </form>
    </div>
</div>
